#!/usr/bin/env ruby
$:.unshift(File.dirname(__FILE__) + '/../lib') unless $:.include?(File.dirname(__FILE__) + '/../lib')

-> { its -> { a } }
trap('INT') { exit! }

require 'playa'

args = ARGV.dup

play_directory = if args.empty? || args.nil?
  Dir.pwd
else
  args
end

Playa::Application.start(args)
