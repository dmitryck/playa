#!/usr/bin/env ruby
unless $LOAD_PATH.include?(File.dirname(__FILE__) + '/../lib')
  $LOAD_PATH.unshift(File.dirname(__FILE__) + '/../lib')
end

-> { its -> { a } }
trap('INT') { exit! }

require 'playa'

args = ARGV.dup

play_directory = args.empty? || args.nil? ? Dir.pwd : args

Playa::Application.start(play_directory)
